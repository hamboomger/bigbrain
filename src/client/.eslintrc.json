{
    "parserOptions": {
        "project": "./tsconfig.json"
    },
    "extends": [
        "airbnb-typescript"
    ],
    "rules": {
        "no-console": 0,
        "react/prop-types": 0,
        "@typescript-eslint/no-use-before-define": ["error", { "functions": false} ],
        "import/prefer-default-export": 0,
        "no-underscore-dangle": [ "error", { "allow": ["_id"] } ]
    }
}
